@{
    ViewData["Title"] = "All About Dogs";
}

<div class="container my-5">
    <h1 class="text-center">All About Dogs</h1>
    <div class="row">
        <div class="col-md-6">
            <h3>Dog Fact</h3>
            <p>@ViewBag.DogFact</p>
        </div>
        <div class="col-md-6 text-center">
            <h3>Dog Picture</h3>
            <img src="@ViewBag.DogImage" alt="Random Dog" class="img-fluid rounded shadow" />
        </div>
    </div>
</div>
